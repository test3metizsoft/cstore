<?php /* @var $this SM_XPayment_Block_Info_XpaymentMultiple */ ?><?php$arrayNotShow = array('method', 'enable', 'check_date', 'checks');$emi = $this->getEmi();if(Mage::getStoreConfig('xpos/general/storeid') === null){    $currentStoreId = Mage::app()->getStore()->getId();}else{    $currentStoreId = Mage::helper('xpos/product')->getCurrentSessionStoreId();}$currentCurrencyCode = Mage::getStoreConfig('currency/options/default',$currentStoreId);?><?php if(count($emi)>1){?>    <strong>Split Payment: </strong></br>    <?php    foreach ($emi as $k => $v) {?>        <?php if (!in_array($k, $arrayNotShow)) echo ($this->getConfigDataPaymentMethod($k, "title")) . ': ' . Mage::app()->getLocale()->currency($currentCurrencyCode)->toCurrency(floatval($v)) . '</br>'; ?>    <?php    }    ?><?php }else{ ?>    <?php foreach ($emi as $k => $v) { ?>        <?php if (!in_array($k, $arrayNotShow)) echo ($this->getConfigDataPaymentMethod($k, "title")) . ': ' . Mage::app()->getLocale()->currency($currentCurrencyCode)->toCurrency(floatval($v)) . '</br>'; ?>    <?php    }    ?><?php } ?><?php if($additionalInformation = $this->getInfo()->getAdditionalInformation()): ?>    <?php foreach($additionalInformation as $key=> $info): ?>        <div class="checkmo-additional-information">            <label><?php echo Mage::helper('payment')->__($key . ':') ?></label>            <span>                <?php echo nl2br($this->escapeHtml($info)) ?>            </span>        </div>    <?php endforeach; ?><?php endif; ?>