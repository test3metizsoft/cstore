<config>
	<modules>
        <Raveinfosys_Linkpoint>
            <version>1.0.0</version>
        </Raveinfosys_Linkpoint>
    </modules>
	<frontend>
		<events>  
			<payment_method_is_active>
				<observers>
					<linkpoint>
						<type>singleton</type>
						<class>Raveinfosys_Linkpoint_Model_Observer</class>
						<method>disableMethod</method>
					</linkpoint>
				</observers>
			</payment_method_is_active>
		</events>
	</frontend>
	<global>
		<models>
			<linkpoint>
                <class>Raveinfosys_Linkpoint_Model</class>
            </linkpoint>
		</models>
	</global>
	<default>
        <payment>
            <linkpoint>
                <active>0</active>
                <title>Credit Card (LinkPoint)</title>
				<order_status>pending</order_status>
				<cctypes>AE,VI,MC</cctypes>
				<useccv>1</useccv>
				<allowspecific>0</allowspecific>
				<test>1</test>
				<payment_action>authorize_capture</payment_action>
				<model>linkpoint/linkpoint</model>
            </linkpoint>
        </payment>
    </default>
</config>